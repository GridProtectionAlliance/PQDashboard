{
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "jsx": "react",
    "paths": { "*": [ "types/*" ] },
    "lib": [ "dom", "es5", "scripthost", "es2015", "es6" ],
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [ "node_modules/@types" ],
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": [ "Scripts/**/*"],
  "exclude": [
    "./node_modules/*"
  ]
}
