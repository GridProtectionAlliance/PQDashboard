        const string min = "";
    #else
        const string min = ".min";
    #endif

    DataContext dataContext = Model.DataContext;
    DataContext securityDataContext = Model.SecurityDataContext;

    Dictionary<string, string> layoutSettings = Model.Global.LayoutSettings;
